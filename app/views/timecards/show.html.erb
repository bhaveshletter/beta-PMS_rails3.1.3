<p>
  <b> Project </b>
  <%= @timecard.project_id %>
</p>
<p>
  <b> Time Duration </b>
  <% @tm = @timecard.time_duration.divmod(60) %>
  <% @hours = @tm[0] > 9 ? @tm[0].to_s : '0' + @tm[0].to_s %>
  <% @minutes = @tm[1] > 9 ? @tm[1].to_s : '0' + @tm[1].to_s %>
<%#= @hours + ":" + @tm[1].to_s %>
  <%= @hours + ":" + @minutes%>
<%#=  @tm[0].to_s + ":" + @tm[1].to_s %>
</p>
<p>
  <b> Role </b>
  <%= @timecard.role %>
</p>

<%= link_to 'Back', timecards_path %>