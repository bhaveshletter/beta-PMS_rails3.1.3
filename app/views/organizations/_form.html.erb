  </div>
  <div class="field">
    <%= f.text_field :city, :placeholder => "City" %>
  </div>
  <div class="field">
    <%= f.text_field :state, :placeholder => "State" %>
  </div>
  <div class="field">
    <%= f.text_field :country, :placeholder => "Country" %>
  </div>
  <div class="field">
    <%= f.text_field :zipcode, :placeholder => "Zipcode" %>
  </div>
<h5> Company Contact numbers: </h5>
  <div class="field">
    <%= f.text_field :office_number_1, :placeholder => "Office Number 1"  %>
  </div>
  <div class="field">
    <%= f.text_field :office_number_2, :placeholder => "Office Number 2" %>
  </div>
