<h3>Edit User Password </h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div> <%= f.password_field :password, :autocomplete => "off", :placeholder => "Password" %> * </div>

  <div> <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %> * </div>

  <div> <%= f.password_field :current_password, :placeholder => "Current password" %> * </div>

  <div><%= f.submit "Update Password" %></div>
<% end %>

